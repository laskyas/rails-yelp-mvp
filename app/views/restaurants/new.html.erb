 <div class="container">

  <h1>Add a new restaurant</h1>

 <%= form_for(@restaurant) do |f| %>

    <p>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :address %>
      <%= f.text_field :address %>
    </p>
    <p>
      <%= f.label :phone_number %>
      <%= f.text_field :phone_number %>
    </p>
    <p>
      <%= f.label :category %>
      <%= f.text_field :category %>
    </p>
      <%= f.submit %>
    <% end %>

    <%= link_to 'Back to restaurants', restaurants_path  %>

</div>
